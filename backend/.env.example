# ==================== BACKEND PYTHON (.env) ====================

# MongoDB
MONGODB_URL=mongodb://localhost:27017
DB_NAME=vyron_fashion

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Email Settings (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com
SMTP_FROM_NAME=Vyron Fashion

# ==================== MB BANK SETTINGS ====================

# URL của MB Bank microservice (Node.js)
MBBANK_SERVICE_URL=http://localhost:4000

# Secret key để xác thực (phải giống với mb-service/.env)
MBBANK_SERVICE_SECRET=random_secret_key_123

# Số tài khoản MB Bank nhận tiền
MBBANK_ACCOUNT_NUMBER=284280405
